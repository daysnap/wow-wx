{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@typings": ["typings"]
    },
    "target": "esnext",
    "module": "commonjs",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "es6",
      "es7"
    ],
    "typeRoots": [
      "./typings"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
