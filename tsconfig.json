{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@daysnap/widgets": ["components"]
    },
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "declaration": true,
    "declarationDir": "lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "components/**/*",
    "typings.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".umirc.ts"
  ]
}
